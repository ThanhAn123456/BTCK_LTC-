@model IPagedList<BTCK_LTC_.Models.Employee>
@using X.PagedList;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quản Lý Nhân Viên</h1>

<div style="display: flex; justify-content: space-between; align-items: center;">
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Thêm mới</a>
    </p>
    <form class="docs-search-form row gx-1 align-items-center" asp-action="Index" style="margin: 0px 0px 16px 0px;">

        <div class="col-auto">
            <input type="text" id="search-docs" name="searchdocs" class="form-control search-docs" placeholder="Tìm kiếm">
        </div>
        <div class="col-auto">
            <select class="form-select w-auto" name="Gender">
                    <option selected="" value="">-- All --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
            </select>
        </div>
        <div class="col-auto">
            <select class="form-select w-auto" name="CompanyId" asp-items="@ViewBag.CompanyId">
                    <option selected="" value="">-- All --</option>
            </select>
        </div>
        <div class="col-auto">
            <select class="form-select w-auto" name="DerpartmentId" asp-items="@ViewBag.DerpartmentId">
                    <option selected="" value="">-- All --</option>
            </select>
        </div>
        <div class="col-auto">
            <select class="form-select w-auto" name="RoleId" asp-items="@ViewBag.RoleId">
                    <option selected="" value="">-- All --</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn app-btn-secondary">Tìm kiếm</button>
        </div>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Derpartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avatar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Derpartment.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Id)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Sửa</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Chi tiết</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav class="app-pagination mt-5">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
        }
        else
        {
                    <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                    </li>
        }

        @for (var i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.PageNumber)
            {
                                <li class="page-item active">
                                    <a class="page-link">@i</a>
                                </li>
            }
            else
            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                                </li>
            }
        }

        @if (Model.HasNextPage)
        {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                        </li>
        }
        else
        {
                        <li class="page-item disabled">
                            <a class="page-link">Next</a>
                        </li>
        }
    </ul>
</nav><!--//app-pagination-->